<h3 id="result"></h3>
<script>
let answers={q1:"Scripting",q2:"Brendan Eich"};
function submitExam(){
  let score=0;
  if(!reg.value) return alert("Please enter register number");
  for(let q in answers){
    let pick=document.querySelector(`[name="${q}"]:checked`);
    if(pick && pick.value==answers[q]) score++;
  }
  alert("Your Score: "+score+"/2");
  location.reload();
}
let t=60,myTimer=setInterval(()=>{
  timer.textContent=("0"+(t/60|0)).slice(-2)+":"+("0"+t%60).slice(-2);
  if(t--<=0) clearInterval(myTimer),alert("Time's up!"),submitExam();
},1000);
</script>
